<table id="example2" class="table table-bordered table-striped text-center">
    <thead>
    <tr>
        <th>No</th>
        <th>Type</th>
        <th>Banks</th>
        <th>Status</th>
        <th>Aksi</th>
    </tr>
    </thead>
    <tbody>
        <% for(let i = 0;i<payment.length;i++){ %>
            <tr>
                <td><%= i + 1 %></td>
                <td><%= payment[i].type %></td>
                <td><% payment[i].banks.forEach(bank => { %>
                    <span class="badge badge-info">
                        <%= bank.nameBank %>
                    </span>
                <% }) %>
                </td>
                <td>
                    <% if(payment[i].status === 'Y'){ %>
                        <span class="badge badge-success">
                            Aktif
                        </span>
                    <% }else{ %>
                        <span class="badge badge-danger">
                            Tidak Aktif
                        </span>
                    <% } %>
                </td>
                <td>
                    <form action="/payment/status/<%= payment[i]._id %>?_method=PUT" method="POST" style="display:inline-block ;">
                        <button class="btn btn-primary"><i class="nav-icon fas fa-folder"></i>&ensp;
                            <% if(payment[i].status === 'Y'){ %>
                                    Non Aktif
                            <% }else{ %>
                                    Aktifkan
                            <% } %>
                        </button>
                    </form>
                    <form style="display:inline-block ;" action="/payment/delete/<%=payment[i]._id%>?_method=DELETE" method="POST">
                        <a href="/payment/edit/<%=payment[i]._id%>" class="btn btn-warning text-white"><i class="nav-icon fas fa-pencil-alt"></i>&ensp;Ubah</a>
                        <button class="btn btn-danger"><i class="nav-icon fas fa-trash"></i>&ensp;Hapus</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </tbody>
    </table>