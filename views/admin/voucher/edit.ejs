<%- include("../../components/header.ejs") %>
<%- include("../../components/preloader.ejs") %>
<%- include("../../components/navbar.ejs") %>
<%- include("../../components/sidebar.ejs") %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
    <div class="container-fluid">
      
        <div class="row mb-2">
        <div class="col-sm-6">
            <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Ubah</li>
            </ol>
        </div>
        </div>
    </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
    <div class="container-fluid">
        <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Ubah Nominal <%= nominal.coinName %></h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/nominal/edit/<%= nominal._id%>?_method=PUT" method="post">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="coinName">Nama Koin</label>
                      <select class="form-control select2bs4" style="width: 100%;" required name="coinName">
                        <option selected="selected">-- Pilih Koin --</option>
                        <option value="Gold"
                        <% if(nominal.coinName == 'Gold'){ %>
                        selected>
                        <% } %>
                        Gold</option>
                        <option value="Diamond"
                        <% if(nominal.coinName == 'Diamond'){ %>
                          selected>
                          <% } %>
                        Diamond</option>
                        <option value="Jewel"
                        <% if(nominal.coinName == 'Jewel'){ %>
                          selected>
                          <% } %>
                        Jewel</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="coinQuantity">Jumlah Koin</label>
                      <input type="number" class="form-control" id="coinQuantity" name="coinQuantity" required placeholder="Masukan Data Kuantitas Koin" value="<%= nominal.coinQuantity %>">
                    </div>
                    <div class="form-group">
                      <label for="price">Harga Koin</label>
                      <input type="number" class="form-control" id="price" name="price" required placeholder="Masukan Data Harga Koin" value="<%= nominal.price %>">
                    </div>
                    <div class="form-group">
                      <button type="submit" class="btn btn-primary">Ubah</button>
                    </div>
                  </div>
                  <!-- /.card-body -->
                </form>
              </div>
            <!-- /.card-header -->
            <!-- /.card-body -->
        <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include("../../components/footer.ejs") %>
<%- include("../../components/js.ejs") %>
