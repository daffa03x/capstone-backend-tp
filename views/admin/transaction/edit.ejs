<%- include("../../components/header.ejs") %>
<%- include("../../components/preloader.ejs") %>
<%- include("../../components/navbar.ejs") %>
<%- include("../../components/sidebar.ejs") %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
    <div class="container-fluid">
      
        <div class="row mb-2">
        <div class="col-sm-6">
            <h1>Jenis Pembayaran</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/payment">Jenis Pembayaran</a></li>
            <li class="breadcrumb-item active">Ubah</li>
            </ol>
        </div>
        </div>
    </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
    <div class="container-fluid">
        <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Ubah Jenis Pembayaran </h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/payment/edit/<%= payment._id%>?_method=PUT" method="post">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="name">Type</label>
                      <input type="text" class="form-control" id="type" name="type" required placeholder="Masukan Data Type Pembayaran" value="<%= payment.type %>">
                    </div>
                    <div class="form-group">
                      <label for="banks">Bank</label>
                      <select class="form-control select2bs4" data-placeholder="-- Pilih Bank --" multiple="multiple" style="width: 100%;" required name="banks">
                        <% banks.forEach(bank=>{ %>
                          <option value="<%= bank._id %>"<% payment.banks.forEach(paymentBank=>{ %>
                            <% if(bank._id.toString() ===  paymentBank._id.toString()){ %>
                              selected
                              <% } %>
                          <% }) %>
                          ><%= bank.name %> - <%= bank.nameBank %> - <%= bank.noRekening %></option>
                          <% }) %>
                      </select>
                    </div>
                    <div class="form-group">
                      <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                  </div>
                  <!-- /.card-body -->
                </form>
              </div>
            <!-- /.card-header -->
            <!-- /.card-body -->
        <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<%- include("../../components/footer.ejs") %>
<%- include("../../components/js.ejs") %>
<script>
function readUrl (input){
  if(input.files && input.files[0]){
    const reader = new FileReader();

    reader.onload = function(e){
      $('#preview').attr('src',e.target.result);
      $('#preview').attr('width', '15%');
      $('#preview').attr('height', '15%');
    }

    reader.readAsDataURL(input.files[0])
  }
}

$('#image').change(function(){
   readUrl(this)
})
</script>